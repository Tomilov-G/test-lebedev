{
  "fields": [
    {
      "type": "text",
      "label": "Имя",
      "model": "name",
      "required": true,
      "placeholder": "Введите ваше имя"
    },
    {
      "type": "email",
      "label": "Email",
      "model": "email",
      "required": true,
      "placeholder": "example@mail.com"
    },
    {
      "type": "password",
      "label": "Пароль",
      "model": "password",
      "required": true,
      "minLength": 6,
      "placeholder": "Не менее 6 символов"
    },
    {
      "type": "select",
      "label": "Роль",
      "model": "role",
      "options": ["Админ", "Пользователь", "Гость"],
      "required": true
    },
    {
      "type": "checkbox",
      "label": "Согласен с условиями",
      "model": "terms",
      "required": true
    }
  ]
}
